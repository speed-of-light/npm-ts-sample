{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/index.ts"
    ],
    "exclude": [
        "./node_modules/**/*.ts",
        "./src/dev.ts",
        "./src/test.ts",
        "./dist/**/*"
    ]
}